<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:application-context.xml</param-value>
    </context-param>

    <servlet>
        <servlet-name>spring-mvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <!-- 配置文件的地址 如果不配置contextConfigLocation， 默认查找的配置文件名称classpath下的：servlet名称+"-serlvet.xml"即：springmvc-serlvet.xml -->
            <param-value>classpath:spring-mvc.xml</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>spring-mvc</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AllDepartmentFilter</filter-name>
        <filter-class>com.etc.managemeetings.filter.AllDepartmentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AllDepartmentFilter</filter-name>
        <url-pattern>/register.jsp</url-pattern>
        <url-pattern>/departments.jsp</url-pattern>
        <url-pattern>/DelDepartmentServ</url-pattern>
        <url-pattern>/bookmeeting.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.etc.managemeetings.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/mymeetings.jsp</url-pattern>
        <url-pattern>/mybookings.jsp</url-pattern>
        <url-pattern>/notifications.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.etc.managemeetings.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AllRegisterRequest</filter-name>
        <filter-class>com.etc.managemeetings.filter.AllRegisterRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AllRegisterRequest</filter-name>
        <url-pattern>/approveaccount.jsp</url-pattern>
        <url-pattern>/Register_okServ</url-pattern>
        <url-pattern>/DelRegister_okServ</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AllMeetingRoomFilter</filter-name>
        <filter-class>com.etc.managemeetings.filter.AllMeetingRoomFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AllMeetingRoomFilter</filter-name>
        <url-pattern>/meetingrooms.jsp</url-pattern>
        <url-pattern>/bookmeeting.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AllUsersFilter</filter-name>
        <filter-class>com.etc.managemeetings.filter.AllUsersFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AllUsersFilter</filter-name>
        <url-pattern>/bookmeeting.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>MymeetingsFilter</filter-name>
        <filter-class>com.etc.managemeetings.filter.MymeetingsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MymeetingsFilter</filter-name>
        <url-pattern>/mymeetings.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>MyCreateMeetingFilter</filter-name>
        <filter-class>com.etc.managemeetings.filter.MyCreateMeetingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyCreateMeetingFilter</filter-name>
        <url-pattern>/mybookings.jsp</url-pattern>
    </filter-mapping>
</web-app>